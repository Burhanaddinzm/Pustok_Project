@{
    ViewData["Title"] = "Cart";
    decimal totalPrice = Model.Sum(x => x.Count * x.Price);
}
@model List<BasketItemsVM>

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<!-- Cart Page Start -->
<main class="cart-page-main-block inner-page-sec-padding-bottom">
    <div class="cart_area cart-area-padding">
        <div class="container">
            <div class="page-section-title">
                <h1>Shopping Cart</h1>
            </div>
            <div class="row">
                <div class="col-12">
                    <form action="#" class="">
                        <!-- Cart Table -->
                        <div class="cart-table table-responsive mb--40">
                            <table class="table">
                                <!-- Head Row -->
                                <thead>
                                    <tr>
                                        <th class="pro-remove"></th>
                                        <th class="pro-thumbnail">Image</th>
                                        <th class="pro-title">Product</th>
                                        <th class="pro-price">Price</th>
                                        <th class="pro-quantity">Quantity</th>
                                        <th class="pro-subtotal">Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <!-- Product Row -->
                                        <tr>
                                            <td class="pro-remove">
                                                <a asp-controller="cart" asp-action="DeleteCartItem" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                                            </td>
                                            <td class="pro-thumbnail">
                                                <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
                                                    <img src="~/client/assets/image/productss/@item.Image" alt="Product">
                                                </a>
                                            </td>
                                            <td class="pro-title"><a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></td>
                                            <td class="pro-price"><span>$@item.Price</span></td>
                                            <td class="pro-quantity">
                                                <div class="pro-qty">
                                                    <div class="count-input-block">
                                                        <input type="number" class="form-control text-center"
                                                               value="@item.Count">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="pro-subtotal"><span>$@(item.Price * item.Count)</span></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-section-2">
        <div class="container">
            <div class="d-flex" style="width:100%;">
                <div class="cart-summary" style="padding:0">
                    <div class="cart-summary-wrap">
                        <h4><span>Cart Summary</span></h4>
                        <p>Sub Total <span class="text-primary">$@totalPrice</span></p>
                        <p>Shipping Cost <span class="text-primary">$00.00</span></p>
                        <h2>Grand Total <span class="text-primary">$@totalPrice</span></h2>
                    </div>
                    <div class="cart-summary-button">
                        <a href="#" class="checkout-btn c-btn btn--primary">Checkout</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>