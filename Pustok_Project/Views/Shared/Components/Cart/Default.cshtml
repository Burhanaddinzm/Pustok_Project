@model List<BasketItemsVM>
@{
    decimal totalPrice = Model.Sum(x => x.Count * x.Price);
    int totalCount = Model.Sum(x => x.Count);
}

<div class="cart-block">
    <div class="cart-total">
        <span class="text-number">
            @totalCount
        </span>
        <span class="text-item">
            Shopping Cart
        </span>
        <span class="price">
            £@totalPrice
            <i class="fas fa-chevron-down"></i>
        </span>
    </div>
    <div class="cart-dropdown-block">
        <div class=" single-cart-block ">
            @foreach (var item in Model)
            {
                <div class="cart-product">
                    <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id" class="image">
                        <img src="~/client/assets/image/productss/@item.Image" alt="">
                    </a>
                    <div class="content">
                        <h3 class="title">
                            <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
                                @item.Name
                            </a>
                        </h3>
                        <p class="price"><span class="qty">@item.Count ×</span> £@item.Price</p>
                        <a asp-controller="cart" asp-action="DeleteCartItem" asp-route-id="@item.Id" class="cross-btn"><i class="fas fa-times"></i></a>
                    </div>
                </div>
            }
        </div>
        <div class=" single-cart-block ">
            <div class="btn-block">
                <a asp-controller="cart" asp-action="index" class="btn">
                    View Cart <i class="fas fa-chevron-right"></i>
                </a>
                <a href="#" class="btn btn--primary">
                    Check Out <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
