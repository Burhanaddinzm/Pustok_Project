@{
    ViewData["Title"] = "Delete Brand";
}
@model Brand

<form asp-controller="brand" asp-action="delete" asp-area="admin" method="post">
    <input asp-for="Id" style="display:none" />
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" id="name" disabled>
    </div>
    <div class="mb-3">
        <p>Image</p>
        <img style="width:100px; height:100px; object-fit:cover" class="my-3" src="~/client/assets/image/brands/@Model.ImageUrl" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="index" asp-controller="brand" asp-area="admin" class="btn btn-secondary mx-2">Back to list</a>
</form>