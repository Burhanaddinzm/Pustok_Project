@{
    ViewData["Title"] = "Update Brand";
}
@model Brand

<form asp-controller="brand" asp-action="edit" asp-area="admin" method="post" enctype="multipart/form-data">
    <input asp-for="Id" style="display:none" />
    <input asp-for="ImageUrl" style="display:none" />
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" id="name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label for="cat" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" id="cat">
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="index" asp-controller="brand" asp-area="admin" class="btn btn-secondary mx-2">Back to list</a>
</form>