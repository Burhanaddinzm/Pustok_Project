@{
    ViewData["Title"] = "Brand";
}
@model List<Brand>

<partial name="_BrandPartial" model="@Model" />

@section Scripts {
    <script>
        const selectListBrand = document.getElementById("slct-brand");
        const productBtnBrand = document.getElementById("product-btn-brnd");

        productBtnBrand.href = "product/detail/" + selectListBrand.value;

        selectListBrand.addEventListener("change", () => {
            productBtnBrand.href = "product/detail/" + selectListBrand.value;
        })
    </script>
}