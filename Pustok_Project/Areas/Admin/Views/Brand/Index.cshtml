@{
    ViewData["Title"] = "Brand";
}
@model List<Brand>

<partial name="_BrandPartial" model="@Model" />

@section Scripts {
    <script>
        const selectListBrands = document.querySelectorAll(".slct-brand");
        const productBtnBrands = document.querySelectorAll(".product-btn-brnd");

        selectListBrands.forEach((brnd, index) => {
            productBtnBrands[index].href = "product/detail/" + brnd.value;
            brnd.addEventListener("click", () => {
                productBtnBrands[index].href = "product/detail/" + brnd.value;
            });
        });
    </script>
}